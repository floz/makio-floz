fontSansSerif = 'Gudea'
fontSerif = 'PT Serif'

html, body
  width 100%
  height width
  background-color #fff
  color #444

.clear 
  clear both

.topbar
  font 700 18px fontSansSerif
  height height = 60px
  overflow hidden
  background-color #1a2129
  color #fff
  padding-left 35px
  text-align center

  h1, .separator, h2
    float left
    line-height height

  h1
    font-size 32px
    letter-spacing 6px

  .separator
    padding-left 5px
    padding-right 5px

  .separator, h2
    font-weight 400
    letter-spacing 2px
    margin 0 5px 0 15px

.topbar__cnt
  display inline-block

.content
  position relative
  width 70%
  margin 0 auto 0
