#weekly_bar
	.title
		width 100%
		font normal 12px/30px 'Montserrat'
		background-color #323232
		color #fff
		padding-left 20px
	ul
		margin-top 1px
		width 100%
		height 70px
		overflow hidden
		li
			display none
			position absolute
			overflow hidden
			height 70px


