html, body
  width 100%
  height width
  background-color #f0f0f0
  color #444

widthArticle = 250
marginArticle = 25
widthTitle = ( widthArticle * 3 + marginArticle * 2 )px
heightTitle = 300px

.header__bar
  position relative
  width 100%
  height 5px
  background linear-gradient(45deg, #fc4349, #008789,#004a61)

.title
  background-color #004a61
  width 100%
  height heightTitle
  color #fff

.title__background
  position absolute
  left 50%
  margin-left -(widthTitle/2) px
  background radial-gradient(ellipse farthest-side at bottom,#008789 0,#004a61 100%)
  width widthTitle
  height heightTitle

.title__content
  position relative
  width widthTitle
  height heightTitle
  top 70px
  margin 0 auto
  font 600 42px 'Open Sans'
  text-shadow 4px 2px 1px rgba(0,40,53,.75)

h1
  text-align center
  font 800 64px 'Lobster'
  display inline

  .small
    font-size 52px
    font-family 'Lobster'
    font-weight 100

.separator
  position relative
  top 4px
  background linear-gradient(0deg,#edf0f4, #dfe2e7)
  width 100%
  height 20px

.content
  width widthTitle
  margin 45px auto 0

.presentation
  position relative
  color #717780
  width 80%

  h4 
    position relative
    z-index 1
    font-family 'Lobster'
    font-size 45px
    font-weight 300
    color #444

  .line
    position relative
    z-index 0
    width 100%
    height 1px
    background linear-gradient(45deg, #fc4349, #008789, #008789,#004a61, #f0f0f0)

.presentation__content
  margin-top 20px
  font 100 16px 'Open Sans'

.cnt-articles
  margin-top 40px
  overflow hidden

.article
  position relative
  width widthArticle px
  float left
  margin-right marginArticle px
  text-align center
  height 320px

  a
    text-decoration none

.article:nth-child( 3 )
  margin-right: 0

.article__top
  position relative
  display block
  height 150px

  img
    position absolute
    display block
    border-top-left-radius 8px
    border-top-right-radius 8px

.article__top__content
  position relative
  top 30%
  display block
  width 100%
  height 100%

  h2
    font 700 24px 'Lobster'
    position relative
    color #fff
    text-shadow 4px 2px 1px rgba(0,0,0,.5)

  h3
    font 100 16px 'Open Sans'//'myriad-pro', 'Myriad Pro', 'MyriadPro'
    position relative
    color #fff

.article__top__layer
  background-color rgba( 68, 68, 68, .55 )
  border-top-left-radius 8px
  border-top-right-radius 8px

.article__bottom 
  position relative
  display block
  background linear-gradient(0deg,#fff, #edf0f4 70%)
  padding-bottom 10px
  border-bottom-left-radius 8px
  border-bottom-right-radius 8px
  height 160px

.article__bottom__content
  position relative
  font normal 14px 'myriad-pro', 'Myriad Pro', 'MyriadPro'
  color #444
  margin-top 20px
  width 70%
  height 100px
  display inline-block

.bt
  position relative
  display inline-block
  bottom 0
  font normal 16px 'Lobster'
  color #008789
  border 1px solid #008789
  padding-top 5px
  padding-bottom 5px
  width 40%
  border-radius 8px

.layer
  position absolute
  width 100%
  height 100%
  top 0
  left 0

footer
  position relative
  margin-top 200px
  height 300px
  background-color #444
