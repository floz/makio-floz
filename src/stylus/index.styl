fontSansSerif = 'Gudea'
fontSerif = 'PT Serif'

.article
  position relative
  overflow hidden
  width 100%
  height 500px
  span
    display block
  a
    text-decoration none
  .article__cnt-content
    display table
  .article__content
    display table-cell

.article__cnt-title
  position relative
  height 40px
  overflow hidden
  background-color #1a2129
  color #fff
  font-family fontSansSerif
  padding 20px 0 20px 0
  width 30%
  float right

.article__cnt-title__content
  position relative
  left 20px

.article__title
  display inline-block
  font-weight 700
  font-size 32px

.article__author
  font-size 14px
  color #586473

.article__date__day, .article__date__month
  padding-right 5px

.article__cnt
  position relative
  height 435px

.article__cnt-img
  position relative
  width 70%
  height 100%
  overflow hidden
  float left

.article__img
  position relative
  width 100%
  height 100%

.article__cnt-content
  position relative
  float right
  width 30%
  height 100%
  span
    display inline-block

.article__content
  vertical-align bottom
  color #fff

.article__description
  padding 20px
  padding-bottom 40px
  background-color #586473
  font normal 14px fontSerif
  letter-spacing 1px

.article--odd
  .article__cnt-title
    float left
  .article__cnt-title__content
    text-align right
    left auto
    right 20px
  .article__author
    text-align right
  .article__cnt-img
    float right
  .article__cnt-content
    float left
  .article__content
    padding-left 0
    text-align right

footer
  display none
  height 300px
  background-color #1a2129

