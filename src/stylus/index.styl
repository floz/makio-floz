html, body
  width 100%
  height width
  background-color #f0f0f0
  color #444

.clear 
  clear both

widthArticle = 250
marginArticle = 25
widthTitle = ( widthArticle * 3 + marginArticle * 2 )px
heightTitle = 300px

.header__bar
  position relative
  width 100%
  height 5px
  background linear-gradient(45deg, #fc4349, #008789,#004a61)

.title
  background-color #004a61
  width 100%
  height heightTitle
  color #fff

.title__background
  position absolute
  left 50%
  margin-left -(widthTitle/2) px
  background radial-gradient(ellipse farthest-side at bottom,#008789 0,#004a61 100%)
  width widthTitle
  height heightTitle

.title__content
  position relative
  width widthTitle
  height heightTitle
  top 70px
  margin 0 auto
  font 600 42px 'Open Sans'
  text-shadow 4px 2px 1px rgba(0,40,53,.75)

h1
  text-align center
  font 800 64px 'Lobster'
  display inline

  .small
    font-size 52px
    font-family 'Lobster'
    font-weight 100

.separator
  position relative
  top 4px
  background linear-gradient(0deg,#edf0f4, #dfe2e7)
  width 100%
  height 20px

.content
  width 1000px
  margin 45px auto 0

.content__left
  position  relative
  float left
  width 80%

.presentation
  position relative
  color #717780

  h4 
    position relative
    z-index 1
    font-family 'Lobster'
    font-size 45px
    font-weight 300
    color #444

  .line
    position relative
    z-index 0
    width 100%
    height 1px
    background linear-gradient(45deg, #fc4349, #008789, #008789,#004a61, #f0f0f0)

.presentation__content
  margin-top 20px
  font 100 16px 'Open Sans'

.cnt-articles
  width 100%
  margin-top 30px
  overflow hidden

.article
  position relative
  width 32%
  height 300px
  margin-top 30px
  margin-right 2%
  float left
  border-radius 8px
  overflow hidden
  a
    color #444
    text-decoration none
    display block
    position relative
    width 100%
    height 300px

.article:nth-child( 3 )
  margin-right: 0

.article__img
  position absolute

.article__content
  position relative
  display block
  color #fff

.article__content
  text-align center
  h2
    font 700 32px 'Lobster'
    position relative

.article__title
  margin-top 50px
  height 100px
  display table-cell
  vertical-align bottom

.article__author, .article__title
  text-shadow 4px 2px 1px rgba(0,40,53,.75)

.article__author
  font-size 12px !important

.article__author strong
  color #fc4349
  font-size 14px

.article__cnt-title
  display table
  position relative;
  width 100%
  height 100px

.article__description
  position relative
  margin 0 auto
  font 400 12px 'Open Sans'
  margin-top 20px;
  width 80%

.article__layer
  position absolute
  display block
  width 100%
  height 100%
  background-color rgba( 0, 74, 97, .25 )

.article__date
  display block
  font 100 12px 'Open Sans'
  padding-top 20px
  text-align center
  color #018f91
  text-shadow 2px 1px 1px rgba(0,40,53,.75)
  span
    display inline

.article__date__day
  font-size 20px
  font-weight 400

.article__date__year
  font-size 13px
  margin-left 5px
  position relative
  line-height 12px

.keywords
  color #008789
  font 600 14px 'Open Sans'
  text-shadow 4px 2px 1px rgba(0,40,53,.75)

.article__top__layer
  background linear-gradient(45deg, rgba( 68, 68, 68, .75 ), rgba( 68, 68, 68, 0 ) 60%)

.content__right
  position relative
  float right
  width 20%
  left 50px
  top 18px
  h4
    font-size 28px
  .presentation__content
    font-size 14px

.cnt-links
  color #008789

.link
  margin-top 20px
  font normal 12px 'Open Sans'
  a
    color #444
    text-decoration none
    h4
      font normal 16px 'Lobster'
  .link__url
    color #008789

footer
  position relative
  margin-top 200px
  height 300px
  background-color #444
