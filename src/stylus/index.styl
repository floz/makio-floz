html, body
  width 100%
  height width
  background-color #edf0f4

titleHeight = 150px

.title
  background-color #152946
  width 100%
  height titleHeight

h1
  color #fff
  text-align center
  font 800 52px/titleHeight 'Lobster'

  .small
    font-size 44px
    font-family 'Lobster'
    font-weight 100

widthArticle = 280
marginArticle = 15

.content
  width ( widthArticle * 3 + marginArticle * 2 )px
  margin 60px auto 0
  overflow hidden

.presentation
  position relative
  color #717780
  text-align center
  width 80%
  left 50%
  margin-left -40%

  h4 
    font-family 'myriad-pro', 'Myriad Pro', 'MyriadPro'
    font-size 18px
    font-weight 300

.cnt-article
  margin-top 60px

.article
  position relative
  width widthArticle px
  float left
  margin-right marginArticle px
  text-align center

  a
    text-decoration none

.article:nth-child( 3 )
  margin-right: 0

.article__top
  position relative
  display block
  height 200px

  img
    position absolute
    display block

.article__top__content
  display block
  width 100%
  height 100%

  h2
    font 700 24px 'Open Sans'
    position relative
    color #fff
    padding-top 30%

  h3
    font 100 16px 'Open Sans'//'myriad-pro', 'Myriad Pro', 'MyriadPro'
    position relative
    color #fff

.article__top__layer
  background-color rgba( 0, 0, 0, .55 )

.layer
  position absolute
  width 100%
  height 100%
  top 0
  left 0
