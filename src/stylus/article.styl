article
	width 		780px
	margin 		80px auto 10px auto
	overflow	hidden

	.preview
		width 			760px
		height			40px
		
		margin-left 	20px
		// margin-top 		10px

		border-bottom 	5px solid #323232
		background 		#FFFFFF
		overflow 		auto

		h3
			float 			left
			padding			16px 0 0 16px

			color 			#323232
			font-size 		10px
			font-family 	'Montserrat', sans-serif
			font-weight 	bold
			text-transform 	uppercase

		.info
			float 			right
			height 			20px
			width 			105px
			margin 			8px 0 0 20px

			color 			#323232
			font-size 		10px
			font-family 	'Montserrat', sans-serif
			font-weight 	normal
			line-height		12px

			a
				color 		#323232
				&:hover
					color 	#e0e0e0

		.separator
			float		right
			width		1px
			height		15px
			margin-top	13px

			background #e0e0e0 url('../img/global/article_liseret.jpg') no-repeat

	.title

		overflow auto

		.corner
			float 		left
			width		260px
			height 		90px
			background 	url('../img/global/article_corner.png') no-repeat bottom left

			img
				width	240px
				height 	80px

		h2
			display 		block
			height 			60px
			background		#FFF
			padding-top		20px
			padding-left	270px

			color 			#323232
			font-size 		22px
			font-family 	'Montserrat', sans-serif
			font-weight 	bold
			text-transform 	uppercase

	.share
		text-align 	left
		height 		40px
		background	url('../img/global/article_share_background.jpg') no-repeat top right

		.box
			float 			right
			width 			205px
			height 			39px
			margin-top		1px
			padding-left 	10px

			overflow 		hidden

			background 		#FFF

			.separator
				// display			inline-block
				float			left
				width			1px
				height			15px
				margin-top		13px
				margin-left 	5px
				margin-right 	9px

				background 		#e0e0e0 url('../img/global/article_liseret.jpg') no-repeat

			.facebook
				// font-size 1px => fix for alignement
				margin-top	10px
				font-size	1px
				display		inline-block
				float		left
				// hack to remove the count and control the width
				width 		90px
				overflow 	hidden

			.twitter
				// font-size 1px => fix for alignement
				font-size	1px
				margin-top	10px
				// display		inline-block
				float		left
				// hack to remove the count and control the width
				// 67 : only the button
				// 80 : the counter ( 1 num max )
				// 85 : counter double letter .. =/
				// that suck XD
				width 		90px
				overflow 	hidden

	content
		display		block
		width		760px
		margin		-10px 0 0 20px
		padding		40px 0

		background 	#FFF

		text-align	center

		p
			padding			0 40px 20px 40px

			color 			#323232
			font-size 		12px
			font-family 	'Montserrat', sans-serif
			font-weight 	normal
			line-height		1.5em

			text-align		left

		img
			margin 	auto
			border 	3px solid #f7f7f7

		img.big
			max-width 			100%
			height 				auto
			border-left-width 	0
			border-right-width 	0

		pre[class*="language-"]
			font-size 	12px

// --------------------------------------------------------------------------- RESPONSIVE DESIGN

@media (max-width: 780px)
	article
		background 	#FFF
		width 		100%
		.preview
			width 	100%
			margin 	0
		.title
			.corner
				width		240px
				background 	transparent
		content
			width			100%
			margin-left 	0

			p
				padding			0 10px 20px 10px

			pre[class*="language-"]
				margin-left 10px
				margin-right 10px

@media (max-width: 480px)
	article
		.title
			.corner
				width		100%
				height 		auto
				float 		none
				img
					width 	100%
					height 	auto
			h2
				display 	block
				overflow 	hidden
				width 		80%
				margin 		auto
				padding 	20px 0 0
				text-align 	center
				height 		auto

// Limit the resize at 320px
@media (max-width: 320px)
	article
		width 				320px
		.preview
			width 			320px
		.title
			.corner
				width		320px
				img
					width 	320px
			h2
				width		320px
		content
			width			320px