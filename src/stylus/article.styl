fontSansSerif = 'Gudea'
fontSerif = 'PT Serif'

.head-img
  width 100%
  height 520px

.title
  background-color #1a2129
  color #fff
  font 700 48px fontSansSerif
  padding 20px 40px 20px 40px
  text-align center

.article 
  margin-bottom 40px
  strong
    font-weight 700
  i
    font-style italic

.article__content
  position relative
  width 70%
  margin 40px auto 0
  font 400 18px fontSerif
  line-height 1.65

  h4
    font-weight 700
    font-size 24px

.article__citation
  margin 40px auto 0

.article__citation--big
  width 80%
  font 400 28px fontSerif
  font-style italic
  text-align center

.article__img
  margin-top 20px

.article__img--big
  width 100%

.article__explanation
  position relative
  margin 20px auto 0
  width 70%

.article__explanation__legend
  font 400 14px fontSerif
  font-style italic
  position absolute
  width 19.5%
  left -21%
  text-align right

.article__explanation__img
  position relative
  width 100%

.share
  position relative
  width 70%
  margin 0 auto

.details-separator
  width 100%
  height 2px
  background-color #1a2129
  margin-top 50px

.details
  position relative
  width 70%
  margin 10px auto 0

.written-by
  margin-bottom 100px
  width 40%
  padding-top 5px
  h4
    color #999
    font 700 16px fontSansSerif
